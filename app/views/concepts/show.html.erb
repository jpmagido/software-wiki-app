<h3>SHOW CONCEPT</h3>
<div> <%= " #{software.name} > #{concept.name}" %> </div>
<div><%= link_to "software: #{software.name}", software_path(software) %></div>


<div class="space-between">
  <div class="column">
    <% concept.properties.each do |property| %>
      <ul>
        <li> <%= property.name %> </li>
        <li> <%= link_to "page de la property: #{property.name}", software_concept_property_path(software, concept, property) %> </li>
      </ul>
    <% end %>
  </div>

  <div>
    <ul>
      <li>Id: <%= concept.id %> </li>
      <li>Name: <%= concept.name %> </li>
      <li>Short text: <%= concept.short_text %> </li>
      <li>Description: <%= concept.description %> </li>
      <li>Date de cr√©ation: <%= concept.created_at.to_date %> </li>
    </ul>
  </div>
</div>
