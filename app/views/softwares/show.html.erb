<div class="centered">
  <div class="column">
    <div>
      <div> <%= "-> #{software.name}" %> </div>
      <ul>
        <li>Id: <%= software.id %> </li>
        <li>Name : <%= software.name %> </li>
        <li>Description : <%= software.description %> </li>
        <li>Date de création : <%= software.created_at.to_date %> </li>
      </ul>
    </div>
    <br>
    <div class="column">
      <h3> Liste des versions associés</h3>

      <% versions.each do |version| %>
        <div>
          -> <span> <%= "#{version.name}  - #{version.description}" %> </span> - <span><%= link_to 'lien vers la page', software_version_path(software, version) %></span>
        </div>
      <% end %>
    </div>
    <br>
    <div> <%= link_to 'Créer une nouvelle version', new_software_version_path(software) %> </div>
  </div>


</div>
